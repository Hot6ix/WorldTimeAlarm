<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wake_up_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simples.j.worldtimealarm.WakeUpActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding20"
        android:layout_marginEnd="@dimen/padding20">

        <TextClock
            android:id="@+id/clock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingEnd="@dimen/padding20"
            android:paddingStart="@dimen/padding20"
            android:paddingTop="@dimen/padding30"
            android:textSize="@dimen/text_clock_size"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_zone_layout"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/time_zone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="@dimen/padding30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/clock"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/time_zone_name_wake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_middle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/time_zone_offset_wake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_zone_name_wake"/>

            <TextClock
                android:id="@+id/time_zone_time_wake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_xxlarge"
                app:layout_constraintTop_toBottomOf="@id/time_zone_offset_wake"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/text_middle"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/padding10"
        android:layout_marginEnd="@dimen/padding20"
        android:layout_marginStart="@dimen/padding20"
        android:visibility="gone"
        android:padding="5dp"
        android:maxLines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clock_layout"
        app:layout_constraintBottom_toTopOf="@id/selector_layout"/>

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/selector_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding10"
        android:layout_marginEnd="@dimen/padding20"
        android:layout_marginStart="@dimen/padding20"
        app:rb_color="@color/whiteGray"
        app:rb_radius="@dimen/padding35"
        app:rb_rippleAmount="1"
        app:rb_duration="1200"
        app:rb_scale="2.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label"
        app:layout_constraintBottom_toTopOf="@id/adViewWakeUp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/snooze"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="center"
                app:backgroundTint="@color/blueGrayDark"
                app:srcCompat="@drawable/ic_action_alarm_snooze"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dismiss"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="center"
                app:backgroundTint="@color/blueGrayDark"
                app:srcCompat="@drawable/ic_action_alarm_off"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/interaction_button"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:scaleType="center"
                app:backgroundTint="@color/blueGrayDark"
                app:srcCompat="@drawable/ic_action_menu_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </com.skyfishjy.library.RippleBackground>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewWakeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id_3"
        android:layout_marginTop="@dimen/padding20"
        android:layout_marginBottom="@dimen/padding20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selector_layout"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
