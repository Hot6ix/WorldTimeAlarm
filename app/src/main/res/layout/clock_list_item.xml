<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding10"
    android:paddingBottom="@dimen/padding10"
    android:paddingStart="@dimen/padding20"
    android:paddingEnd="@dimen/padding20"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/time_zone_name_clock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="start|center_vertical"
        android:textSize="@dimen/text_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/clock_layout"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/clock_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/time_zone_name_clock"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/time_zone_am_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/text_middle"
            android:layout_marginEnd="@dimen/padding5"
            app:layout_constraintEnd_toStartOf="@id/time_zone_time"
            app:layout_constraintBaseline_toBaselineOf="@id/time_zone_time"/>

        <TextView
            android:id="@+id/time_zone_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_horizontal"
            android:textSize="@dimen/text_xxlarge"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time_zone_date"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/time_zone_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_horizontal"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@id/time_zone_time"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>