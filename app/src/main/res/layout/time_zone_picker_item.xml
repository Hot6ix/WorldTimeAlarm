<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding15"
    android:paddingBottom="@dimen/padding15"
    android:paddingStart="@dimen/padding20"
    android:paddingEnd="@dimen/padding20"
    android:background="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/time_zone_picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_middle"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/time_zone_dst"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_daylight_saving_time"
        android:tint="@color/color14"
        android:visibility="gone"
        android:contentDescription="@null"
        android:layout_marginStart="@dimen/padding5"
        app:layout_constraintTop_toTopOf="@id/time_zone_picker_title"
        app:layout_constraintStart_toEndOf="@id/time_zone_picker_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/time_zone_picker_summary_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/time_zone_picker_title">

        <TextView
            android:id="@+id/time_zone_picker_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/time_zone_picker_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>