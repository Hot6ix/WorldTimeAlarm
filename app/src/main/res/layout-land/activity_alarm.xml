<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.simples.j.worldtimealarm.AlarmActivity">

    <LinearLayout
        android:id="@+id/decide_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueGray"
        ads:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/alarm_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/padding20"
            android:text="@string/cancel"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/alarm_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/padding20"
            android:text="@string/save"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/detail_content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decide_view">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/time_picker_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding20"
                android:layout_marginStart="@dimen/padding20"
                android:focusableInTouchMode="true"
                android:descendantFocusability="blocksDescendants"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/time_set_layout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/divider_expected"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/time_picker">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/time_zone_view"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/divider_range"
                        app:layout_constraintStart_toStartOf="parent"
                        ads:layout_constraintEnd_toEndOf="parent">

                        <TextView
                            android:id="@+id/time_zone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="@dimen/text_middle"
                            android:textColor="@android:color/black"
                            android:ellipsize="end"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/time_zone_offset"/>

                        <TextView
                            android:id="@+id/time_zone_offset"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColor="@color/colorPrimary"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            ads:layout_constraintTop_toBottomOf="@id/time_zone"
                            ads:layout_constraintBottom_toBottomOf="parent"/>

                    </android.support.constraint.ConstraintLayout>

                    <View
                        android:id="@+id/divider_range"
                        style="@style/Divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        ads:layout_constraintBottom_toTopOf="@id/time_range_layout"/>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/time_range_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        ads:layout_constraintBottom_toBottomOf="parent">

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/time_range_start"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding10"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/time_range_end">

                            <TextView
                                android:id="@+id/range_start_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/range_start"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                android:id="@+id/range_start"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/range_not_set"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@id/range_start_title"/>

                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/time_range_end"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding10"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toEndOf="@id/time_range_start"
                            app:layout_constraintEnd_toEndOf="parent">

                            <TextView
                                android:id="@+id/range_end_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/range_end"
                                android:textColor="@android:color/black"
                                android:gravity="center"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/range_end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/range_not_set"
                                android:textColor="@color/colorPrimary"
                                app:layout_constraintTop_toBottomOf="@id/range_end_title"/>

                        </android.support.constraint.ConstraintLayout>

                    </android.support.constraint.ConstraintLayout>

                </android.support.constraint.ConstraintLayout>

                <TimePicker
                    android:id="@+id/time_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:focusable="false"
                    android:paddingStart="@dimen/padding25"
                    android:paddingEnd="@dimen/padding25"
                    app:layout_constraintHorizontal_bias="0.7"
                    ads:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/time_set_layout"/>

                <View
                    android:id="@+id/divider_expected"
                    style="@style/Divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/time_picker" />

                <TextView
                    android:id="@+id/expectedTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding10"
                    android:paddingBottom="@dimen/padding10"
                    android:paddingStart="@dimen/padding20"
                    android:paddingEnd="@dimen/padding20"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toBottomOf="@id/divider_expected"
                    app:layout_constraintStart_toStartOf="@drawable/ic_dashboard_black_24dp"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <View
                    android:id="@+id/divider2"
                    style="@style/Divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/expectedTime" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding20"
                android:layout_marginStart="@dimen/padding20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_picker_layout">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/repeat_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider_repeat"
                    style="@style/Divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/repeat_day" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/alarm_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_repeat" />

            </android.support.constraint.ConstraintLayout>

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
